@await Html.PartialAsync("Layouts/Sections/_Variables")
@inject IHttpContextAccessor httpContextAccessor

<!DOCTYPE html>
<html lang="en" class='light-style @ViewData["navbarFixed"] @ViewData["menuFixed"] @ViewData["menuCollapsed"] @ViewData["footerFixed"] @ViewData["customizerHidden"]' dir="ltr" data-theme="theme-default" data-assets-path='@(httpContextAccessor.HttpContext.Request.PathBase + "/")' data-template='@((Convert.ToBoolean(@TempData.Peek("menuHorizontal")).ToString() == "True") ? "horizontal-menu-template" : "vertical-menu-template")'>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

  <title>@ViewData["title"] | @TempData.Peek("appName") - Asp.Net Core Admin Template</title>
  <meta name="description" content="" />

  <!-- Canonical SEO -->
  <link rel="canonical" href='@TempData.Peek("productPage")'>
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="~/img/favicon/favicon.ico" />

  <!-- Core Styles -->
  @await Html.PartialAsync("Layouts/Sections/_Styles")

  <!-- Vendor Styles -->
  @RenderSection("VendorStyles", required: false)

  <!-- Page Styles -->
  @RenderSection("PageStyles", required: false)

  <!-- Include Scripts for customizer, helper, analytics, config -->
  @await Html.PartialAsync("Layouts/Sections/_ScriptsIncludes")

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Rubik:400,500,700">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

  <link href=" https://cdn.jsdelivr.net/npm/intro.js@7.2.0/minified/introjs.min.css " rel="stylesheet">
</head>

<body>
  <!-- Layout Content -->
	<header class="fixed-top d-sm-flex header-layout align-items-center justify-content-between px-4 w-100 py-1">
		<div class="px-2 py-2 py-sm-0 align-items-center">
			<span id="toggle-btn" class="me-3 cursor-pointer">
				<svg width="20" height="16" viewBox="0 0 20 16" xmlns="http://www.w3.org/2000/svg">
					<g fill="#ffffff" fill-rule="evenodd">
						<rect width="20" height="2" rx="1" />
						<rect y="7" width="20" height="2" rx="1" />
						<rect y="14" width="20" height="2" rx="1" />
					</g>
				</svg>
			</span>
			<img src="~/img/branding/japhy.png" alt="Header Image" width="200" />
		</div>
		<!-- Navigation Links -->
		<nav class="header-nav px-2 py-2 py-sm-0 d-flex justify-content-center d-sm-block">
			<ul>
@* 				<li><a href="~/Misc/Help">Help</a></li> *@
			</ul>
		</nav>
	</header>


  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://unpkg.com/@@lottiefiles/lottie-player@@latest/dist/lottie-player.js"></script>

  @RenderBody()
  <!--/ Layout Content -->

  <!-- Core Scripts -->
  @await Html.PartialAsync("Layouts/Sections/_Scripts")

  <!-- Vendor Scripts -->
  @RenderSection("VendorScripts", required: false)

  <script src="~/js/main.dist.js"></script>

  <script src=" https://cdn.jsdelivr.net/npm/intro.js@7.2.0/intro.min.js "></script>

  <!-- Page Scripts-->
  <script src="~/js/site.js?v=0.91"></script>
  @RenderSection("PageScripts", required: false)



</body>

</html>
