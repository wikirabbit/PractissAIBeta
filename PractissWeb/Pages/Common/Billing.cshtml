}

<!-- Current Plan -->
<div class="card mb-4">
	<h5 class="card-header pb-3">Current Plan</h5>
	<div class="card-body">
		<div class="row">
			<div class="col-xl-6 order-1 order-xl-0">
				<div class="mb-4">
					<h6 class="mb-1">Your Current Plan is Standard</h6>
					<p>A simple start for everyone</p>
				</div>
				<div class="mb-4">
					<h6 class="mb-1"><span class="me-2">$39 Per Month</span> <span class="badge bg-label-primary">Popular</span></h6>
					<p>Standard plan for career professionals</p>
				</div>
			</div>
			<div class="col-xl-6 order-0 order-xl-0">
				<div class="alert alert-warning mb-4" role="alert">
					<h6 class="alert-heading mb-1">We need your attention!</h6>
					<span>You are running out of sessions</span>
				</div>
				<div class="plan-statistics">
					<div class="d-flex justify-content-between">
						<h6 class="mb-2">Sessions</h6>
						<h6 class="mb-2">8 of 10 Used</h6>
					</div>
					<div class="progress mb-1">
						<div class="progress-bar w-75" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
					</div>
					<p>2 sessions remaining until your plan refreshes next billing cycle</p>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- /Current Plan -->
